<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system     threads="0" />
    <experiment length="0"
                ticks_per_second="16"
                random_seed="1204" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <Spiri_controller id="Spiri"
                         library="build/source/faulttolerance/libSpiri_controller">
      <actuators>
        <quadrotor_position implementation="default" />
      </actuators>
      <sensors>
        <positioning implementation = "default"/>
      </sensors>

      <params>

      </params>

    </Spiri_controller>

  </controllers>

  <loop_functions library = "build/source/faulttolerance/libGradient_loop_functions"
                  label   = "Gradient_loop_functions">
    <!-- un-evolvable environment variables -->
    <simulation RMin    = "1"
                RMax    = "2"
                StopCoverageRadius = "100"
                RandomFailures = "20,1000"/>

  </loop_functions>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="600.0, 600.0, 1" center="0,0,0">

    <floor id="floor" source="loop_functions" pixels_per_meter="10"/>

    <distribute>
      <position method="uniform" min="-8,-8,0" max="8,8,0" />
      <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
